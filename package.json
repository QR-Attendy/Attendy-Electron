{
  "name": "qr-attend-x",
  "productName": "QRttendX",
  "version": "0.1.0-a3",
  "description": "QRttendX is an advanced attendance management system that leverages QR code technology to streamline the process of tracking and managing attendance in various settings, including educational institutions and corporate environments.",
  "license": "AGPL-3.0-only",
  "author": "Ã†CE acebld",
  "type": "module",
  "main": "source/snapdragon.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.attendy.bld",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ],
      "icon": "main/media/icons/LOGO-ico.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "main/media/icons/LOGO-ico.ico",
      "uninstallerIcon": "main/media/icons/LOGO-ico.ico",
      "uninstallDisplayName": "QRttendX on Desktop",
      "license": "LICENSE"
    },
    "extraResources": [
      {
        "from": "main/pyAttendy/dist/attendy_engine.exe",
        "to": "atom/attendy_engine.exe"
      }
    ]
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "chokidar": "^5.0.0",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  }
}
